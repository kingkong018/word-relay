<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dreamershk.projectshiritori.GameWindowWithCanva"
    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="3dp">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center">
            <ImageView
                android:id="@+id/image_life1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart1"/>
            <ImageView
                android:id="@+id/image_life2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart2"/>
            <ImageView
                android:id="@+id/image_life3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart3"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/image_score_hundreds_digit"
                android:src="@drawable/number_0_36dp"
                android:rotation="-19"
                android:layout_marginRight="-12dp" />
            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:id="@+id/image_score_tens_digit"
                android:src="@drawable/number_0_36dp"/>
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/image_score_units_digit"
                android:src="@drawable/number_0_36dp"
                android:rotation="10"
                android:layout_marginLeft="-10dp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_navy_48dp"
                android:alpha="0.2"
                android:layout_centerVertical="true" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_round_hundreds_digit"
                    android:src="@drawable/number_dotted_0_24dp"
                    android:rotation="-14"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_round_tens_digit"
                    android:src="@drawable/number_dotted_0_24dp"
                    android:layout_marginLeft="-5dp"
                    android:layout_marginRight="-5dp"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_round_units_digit"
                    android:src="@drawable/number_dotted_0_24dp"
                    android:rotation="10"
                    android:layout_centerVertical="true" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    //Display remaining time
    //max: maximum progress
    //progress: default progress
    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/pb_remaining_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="1"
        android:maxHeight="500dp"
        android:progressDrawable="@drawable/timer_progress" />

    //Main Game Window: display text
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/relative_layout_canva">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:id="@+id/linearLayout2">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_markunread_mailbox_white_36dp"
                android:id="@+id/floating_button_system_message"
                android:visibility="gone" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:id="@+id/txt_system_message"
                android:hint="This is where the system message locates. Testing for three lines. I think 2 lines is better."
                android:paddingLeft="4dp"
                android:background="#faf8f6dc"
                android:text="avc"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/popup_window_for_game_action"
        android:id="@+id/pop_up_window"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"
        />

    //Bottom bar: hidden action, enter text, send button.
    <LinearLayout
        android:id="@+id/linear_layout_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/ib_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:src="@drawable/ic_open_in_browser_black_36dp"
            android:paddingRight="3dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <EditText
                android:id="@+id/et_lastChar"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:inputType="none"/>
            <EditText
                android:id="@+id/et_input"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:src="@drawable/ic_send_black_36dp"
            android:paddingLeft="3dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8e2eb8ab"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/linear_layout_queue_bar"
        android:orientation="horizontal"
        android:visibility="visible">

    </LinearLayout>
</LinearLayout>
